generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario{
id Int @id @default(autoincrement())
nome String
email String @unique
password String? //
isAdmin Boolean @default(false)
}

model Reserva{
  id Int @id @default(autoincrement())
  usuario_id Int
  mesa_id Int
  data DateTime //
  n_pessoas Int
  status Boolean
}

model Mesa{
  id Int @id @default(autoincrement())
  codigo String
  n_lugares Int
}
